@model OnlineShopingManagment.Models.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div>
    <div class="row">
        <div class="col-md-6">
            <form id="AddNewRoom" method="post" enctype="multipart/form-data" onsubmit="return AjaxPost(this)">

                <label>Category Name</label>
                <div class="form-group" style="margin-left:-15px">
                    <div class="col-md-10">
                        @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <br />

                <label>Product Name : </label>
                <input id="ProductName" name="ProductName" class="form-control" placeholder="Product Name" />

                <label>Price</label>
                <input id="Price" name="Price" class="form-control" placeholder="Price" />



                <label>Details</label>
                <input id="Details" name="Details" class="form-control" placeholder="Details" />


                <label>Photo</label>
                <input id="ImageUpload" name="ImageUpload" class="form-control" type="file" />
                <br />
                <button class="btn btn-success">Add Product</button>
            </form>
        </div>
    </div>
</div>

<script>
    function AjaxPost(formData) {
        var ajaxConfig = {
            type: "post",
            url: "/Product/SaveData",        ///Save Data by using Controller wtih Action
            data: new FormData(formData),
            success: function (result) {
                alert(result);
                window.location.href = "/Product/ProductList"  /// Redirect to page with controll and Action
            }
        }
        if ($(formData).attr('enctype') == "multipart/form-data") {
            ajaxConfig["contentType"] = false;
            ajaxConfig["processData"] = false;
        }
        $.ajax(ajaxConfig);
        return false;
    }
</script>